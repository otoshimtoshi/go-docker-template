{
  // IntelliSense を使用して利用可能な属性を学べます。
  // 既存の属性の説明をホバーして表示します。
  // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go Debug",
      "type": "go",
      "debugAdapter": "dlv-dap",
      "request": "launch",
      "port": 2345,
      "host": "localhost",
      "mode": "exec",
      "program": "/app",
      "substitutePath": [
          {
              "from": "${workspaceFolder}",
              "to": "/app"
          }
      ]
    },
    // 該当のファイルを開いている状態でF5を押すと、そのファイルがデバック実行される
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "env": {},
      "args": []
    },
  ]
}